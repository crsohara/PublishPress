{
  "name": "publishpress",
  "description": "WordPress plugin to accelerate your publishing workflow.",
  "homepage": "http://publishpress.com/",
  "type": "wordpress-plugin",
  "license": "GPL-2.0+",
  "authors": [
    {
      "name": "PublishPress",
      "email": "help@publishpress.com"
    }
  ],
  "repositories": [
    {
      "type": "git",
      "url": "https://github.com/OSTraining/WordPress-Plugin-Builder"
    }
  ],
  "autoload": {
     "psr-4": {
       "PublishPress\\Core\\": "core/"
     }
  },
  "require": {
    "php": ">= 5.3",
    "twig/twig": "~1.0",
    "pimple/pimple": "~3.0",
    "publishpress/wordpress-plugin-builder": "^2"
  },
  "require-dev": {
    "gettext/gettext": "^4.2",
    "codeception/codeception": "^2.3"
  },
  "scripts": {
    "test": "./vendor/bin/codecept run --no-interaction"
  },
  "config": {
    "preferred-install": "dist",
    "optimize-autoloader": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
